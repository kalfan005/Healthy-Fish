<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/login1"
    tools:context=".Screen1.MainActivity">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="294dp"
        android:background="@drawable/design1">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="230dp"
            android:layout_gravity="center"
            android:layout_marginLeft="45dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/main1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="210dp">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="460dp"
            android:layout_gravity="center"
            android:layout_margin="30dp"
            app:cardCornerRadius="15dp">



            <EditText
                android:id="@+id/edttxt_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:hint="Enter Your Email"/>


            <EditText
                android:id="@+id/edttxt_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="70dp"
                android:layout_marginRight="15dp"
                android:drawableRight="@drawable/baseline_remove_red_eye_24"
                android:hint="Password"
                android:inputType="numberPassword"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Forgot Password ?"
                android:textColor="#084865"
                android:textStyle="bold"
                android:textSize="10dp"
                android:layout_marginTop="120dp"
                android:layout_marginLeft="190dp"/>

            <ImageView
                android:layout_width="22dp"
                android:layout_height="21dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="145dp"
                android:background="@drawable/ic_check" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remember Me"
                android:textSize="15dp"
                android:textColor="#878484"
                android:layout_marginTop="146dp"
                android:layout_marginLeft="40dp"/>


            <Button
                android:id="@+id/lgn_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:text="Login"
                android:textSize="20dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:textColor="@color/white"
                android:background="@drawable/btndesign"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="275dp"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New User ?"
                    android:textColor="#084865"
                    android:layout_marginTop="8dp"
                    android:textSize="15dp"
                    android:layout_marginLeft="70dp"/>

                <TextView
                    android:id="@+id/textrgst"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Register"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"
                    android:textColor="#084865"
                    android:textSize="15dp"
                    android:layout_marginLeft="10dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="308dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="38dp"
                    android:layout_height="42dp"
                    android:layout_marginLeft="115dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/facebook"/>

                <ImageView
                    android:layout_width="38dp"
                    android:layout_height="42dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/gplus"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="365dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="OR"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:gravity="center"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Guest Login"
                    android:textColor="#084865"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:gravity="center"
                    android:layout_marginTop="10dp"/>



            </LinearLayout>


        </androidx.cardview.widget.CardView>


    </LinearLayout>
</FrameLayout>